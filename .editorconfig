root = true

[*]
    charset = utf-8
    insert_final_newline = true
    end_of_line = lf
    quote_type = double
    indent_style = space
    indent_size = 2
    max_line_length = 120
    curly_bracket_next_line = false
    spaces_around_brackets = true
    spaces_around_operators = true
    indent_brace_style = K&R

[*.tsx]
    max_line_length = 100


